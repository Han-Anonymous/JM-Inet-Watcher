    <!-- Icon Styles -->
    <Style x:Key="IconStyle" TargetType="Path">
        <Setter Property="Fill" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <Style x:Key="LargeIconStyle" TargetType="Path" BasedOn="{StaticResource IconStyle}">
        <Setter Property="Width" Value="24"/>
        <Setter Property="Height" Value="24"/>
    </Style>
    
    <Style x:Key="ButtonIconStyle" TargetType="Path" BasedOn="{StaticResource IconStyle}">
        <Setter Property="Width" Value="14"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Margin" Value="0,0,6,0"/>
    </Style>

    <Style x:Key="AccentIconStyle" TargetType="Path" BasedOn="{StaticResource IconStyle}">
        <Setter Property="Fill" Value="{StaticResource AccentPrimaryBrush}"/>
    </Style>

    <Style x:Key="SuccessIconStyle" TargetType="Path" BasedOn="{StaticResource IconStyle}">
        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
    </Style>

    <Style x:Key="WarningIconStyle" TargetType="Path" BasedOn="{StaticResource IconStyle}">
        <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
    </Style>

    <Style x:Key="ErrorIconStyle" TargetType="Path" BasedOn="{StaticResource IconStyle}">
        <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
    </Style>

</ResourceDictionary>