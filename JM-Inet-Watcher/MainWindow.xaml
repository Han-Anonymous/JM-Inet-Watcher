<Window x:Class="JM_Inet_Watcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JM_Inet_Watcher"
        mc:Ignorable="d"
        Title="Jakel INetClockTool Watcher" Height="450" Width="800" Background="#23272F" 
        Icon="/icons8-clock-80.ico">
    <Window.Resources>
        <!-- Button Style with Hover Contrast and Icon Support -->
        <Style x:Key="RichButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="Background" Value="#238636"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2EA043"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#196C2E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RefreshButtonStyle" TargetType="Button" BasedOn="{StaticResource RichButtonStyle}">
            <Setter Property="Background" Value="#0969DA"/>
            <Setter Property="Margin" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218BFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#054A91"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Fade-in Animation for Status Label -->
        <Storyboard x:Key="FadeInStatus">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Border CornerRadius="20" Background="#2D333B" Padding="30" Margin="40">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="🕒" FontSize="36" Margin="0,0,10,0" Foreground="#FFFFB458"/>
                    <TextBlock Text="INetClockTool Service Status" FontSize="32" FontWeight="Bold" Foreground="#F0F6FC" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="🔔" FontSize="28" Margin="0,0,8,0" Foreground="#FFD700"/>
                    <TextBlock x:Name="ServiceStatusLabel" Text="Unknown" FontSize="28" FontWeight="SemiBold" Foreground="#58A6FF" Opacity="0" Loaded="ServiceStatusLabel_Loaded"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="⏰" FontSize="18" Margin="0,0,6,0" Foreground="#FF6F61"/>
                    <TextBlock x:Name="LastCheckedLabel" Text="Last Checked: Never" FontSize="18" Foreground="#ADBAC7"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="StartServiceButton" Style="{StaticResource RichButtonStyle}" Width="170" Height="40" Click="StartServiceButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="▶️" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="Start Service"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="RefreshButton" Style="{StaticResource RefreshButtonStyle}" Width="170" Height="40" Click="RefreshButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="🔄" FontSize="20" Margin="0,0,6,0"/>
                            <TextBlock Text="Refresh Now"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
